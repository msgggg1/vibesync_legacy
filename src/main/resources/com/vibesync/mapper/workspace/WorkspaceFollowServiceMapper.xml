<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vibesync.workspace.mapper.WorkspaceFollowServiceMapper">

    <!-- 사용자가 팔로우하는 사용자들의 ID 목록 조회 -->
    <select id="selectUserFollowingIdList" resultType="int">
        SELECT following_idx
        FROM follow
        WHERE follower_idx = #{acIdx}
        ORDER BY created_at DESC
    </select>

</mapper> 
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>

 	<definition name="board.*" template="/WEB-INF/views/board/inc/layout.jsp">
    	<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    	<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
    	<put-attribute name="sidebar" value="/WEB-INF/views/inc/sidebar.jsp" />
    	<put-attribute name="content" value="/WEB-INF/views/board/{1}.jsp"/>

    	<put-attribute name="title" value="{1}"/>
    	<put-attribute name="css" value="{1}.css"/>
    </definition>


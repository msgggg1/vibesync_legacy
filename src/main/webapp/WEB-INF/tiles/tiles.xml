<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>

 	<!-- 1. 모든 페이지의 기본이 되는 레이아웃(틀) 정의 -->
    <definition name="baseLayout" template="/inc/layout.jsp">
        <put-attribute name="title" value="VibeSync" />
        <put-attribute name="header" value="/inc/header.jsp" />
        <put-attribute name="sidebar" value="/inc/sidebar.jsp" />
        <put-attribute name="body" value="" /> 
        <put-attribute name="footer" value="/inc/footer.jsp" />
    </definition>

    <definition name="*/*" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>

    <!-- 
      로그인 페이지처럼 헤더, 푸터가 없는 독립적인 페이지를 위한 정의
    -->
    <definition name="login" template="/WEB-INF/views/member/login.jsp" />

    
</tiles-definitions>



